<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.diewland.android.qr_pp_40.CalcActivity"
    tools:showIn="@layout/activity_calc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mod"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:textSize="@android:dimen/app_icon_size" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pad_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="@android:dimen/app_icon_size" />

                <Button
                    android:id="@+id/pad_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="@android:dimen/app_icon_size" />

                <Button
                    android:id="@+id/pad_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="@android:dimen/app_icon_size" />

                <Button
                    android:id="@+id/pad_dot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="@android:dimen/app_icon_size" />

            </LinearLayout>

             <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                 <Button
                     android:id="@+id/pad_8"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="8"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_5"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="5"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_2"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="2"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_0"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="0"
                     android:textSize="@android:dimen/app_icon_size" />

            </LinearLayout>


             <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                 <Button
                     android:id="@+id/pad_9"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="9"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_6"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="6"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_3"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="3"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_equal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="="
                     android:textSize="@android:dimen/app_icon_size" />

            </LinearLayout>


             <LinearLayout
                 android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                 <Button
                     android:id="@+id/pad_del"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="DEL"
                     android:textSize="30sp" />

                 <Button
                     android:id="@+id/pad_divide"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="รท"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_multiply"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="x"
                     android:textSize="36sp" />

                 <Button
                     android:id="@+id/pad_minus"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="-"
                     android:textSize="@android:dimen/app_icon_size" />

                 <Button
                     android:id="@+id/pad_add"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="+"
                     android:textSize="@android:dimen/app_icon_size" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
